<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" android:layout_margin="5dp">

	<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginLeft="10dp">
		<TextView android:id="@+id/TVBudgetCategory" android:layout_height="wrap_content" android:textSize="18sp" android:layout_width="fill_parent" android:layout_weight="1">
		</TextView>
		<TextView android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:id="@+id/TVBudgetAmount" android:gravity="right" android:textSize="18sp" android:paddingRight="10dp">
		</TextView>
	</LinearLayout>
	<TextView android:layout_height="wrap_content" android:id="@+id/TVExpenseCategoryAmount" android:layout_width="fill_parent" android:textSize="18sp" android:gravity="right" android:paddingRight="10dp">
	</TextView>
	<ProgressBar android:layout_height="wrap_content" android:layout_width="fill_parent" style="?android:attr/progressBarStyleHorizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingTop="3dp" android:id="@+id/PBBudget">
	</ProgressBar>
</LinearLayout>
