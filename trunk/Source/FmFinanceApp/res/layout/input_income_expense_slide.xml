<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LLBookmarkSliding" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="bottom"
	android:visibility="gone">
	<SlidingDrawer android:id="@+id/SlidingDrawer"
		android:handle="@+id/slideBar" android:content="@+id/contentLayout"
		android:layout_height="296dip" android:layout_width="fill_parent">


		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/slideBar">
			<LinearLayout android:layout_alignParentRight="true"
				android:layout_width="48dp" android:layout_height="32dip"
				android:background="#808080" />
		</RelativeLayout>

		<LinearLayout android:layout_width="wrap_content"
			android:id="@+id/contentLayout" android:orientation="vertical"
			android:gravity="center|top" android:background="#C0C0C0"
			android:layout_height="wrap_content">

			<RelativeLayout android:id="@+id/TVBookmarkBar"
				android:layout_width="fill_parent" android:layout_height="40dip"
				android:background="#fff">

				<TextView android:id="@+id/TVBookmarkTitle" android:text="즐겨찾는 항목"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_centerInParent="true" android:textColor="#000"
					android:textStyle="bold" android:textSize="20dip" />

				<ImageButton android:id="@+id/BTBookmarkAdd"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true" android:src="@drawable/editable"
					android:padding="0dip" android:scaleType="fitXY"
					android:layout_marginRight="20dip" android:layout_width="32dip"
					android:layout_height="32dip" />

				<Button android:id="@+id/BTBookmarkIncome" android:text="수입"
					android:textColor="#4000" android:layout_centerVertical="true"
					android:background="#7e7" android:layout_alignParentLeft="true"
					android:layout_marginLeft="10dip" android:layout_width="36dip"
					android:layout_height="24dip" />
				<Button android:id="@+id/BTBookmarkExpense"
					android:background="#060" android:text="지출" android:textColor="#ffff"
					android:layout_centerVertical="true" android:layout_toRightOf="@+id/BTBookmarkIncome"
					android:layout_width="36dip" android:layout_height="24dip" />

			</RelativeLayout>

			<ListView android:id="@+id/LLBookmark" android:layout_width="fill_parent"
				android:layout_height="200dp" android:layout_margin="10dip"
				android:cacheColorHint="#0000" />
			<!-- 북마크를 표시하는 부분 <ScrollView android:id="@+id/ScrollView02" android:layout_height="fill_parent" 
				android:layout_width="fill_parent"> <LinearLayout android:id="@+id/LLBookmark" 
				android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="5dp" 
				android:orientation="vertical"> </LinearLayout> </ScrollView> -->
		</LinearLayout>
	</SlidingDrawer>
</LinearLayout>