<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="5dp">
    	<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="5dp">
		<ImageView android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="3" android:id="@+id/IVDetailCreditCardLogo" android:src="@drawable/icon"></ImageView>
		
	<LinearLayout android:id="@+id/LinearLayout02" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" android:layout_weight="1">
		<TextView android:id="@+id/TVDetailCreditCardName" android:text="카드이름" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="18sp"></TextView>
		<TextView android:id="@+id/TVDetailCreditCardSettlementDay" android:text="결제일" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="18sp"></TextView>
		</LinearLayout></LinearLayout>
	<TextView android:text="카드번호" android:id="@+id/TVDetailCreditCardNumber" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center" android:textSize="18sp"></TextView>
	<LinearLayout android:id="@+id/LinearLayout04" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:layout_marginTop="5dp">
	<TextView android:text="이번달 사용 금액" android:id="@+id/TVDetailCreditCardExpenseAmount" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="18sp"></TextView>
	<Button android:id="@+id/BtnDetailCreditCardExepnseAmount" android:layout_height="wrap_content" android:layout_width="fill_parent"></Button></LinearLayout>
	
	<LinearLayout android:id="@+id/LinearLayout05" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:layout_marginTop="5dp">
	<TextView android:id="@+id/TVDetailCreditCardBilingAmount" android:text="이번달 청구 예정 금액" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="18sp"></TextView>
	<TextView android:id="@+id/TVDetailCreditCardBilingDate" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<Button android:id="@+id/BtnDetailCreditCardBilingAmount" android:layout_height="wrap_content" android:layout_width="fill_parent"></Button>
</LinearLayout>
	
	<LinearLayout android:id="@+id/LinearLayout06" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:layout_marginTop="5dp">
	<TextView android:id="@+id/TVDetailCreditCardNextBilingAmount" android:text="다음달 청구 예정금액" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="18sp"></TextView>
	<TextView android:id="@+id/TVDetailCreditCardNextBilingDate" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<Button android:id="@+id/BtnDetailCreditCardNextBilingAmount" android:layout_height="wrap_content" android:layout_width="fill_parent"></Button>

</LinearLayout>
<LinearLayout android:id="@+id/LinearLayout07" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical" android:layout_marginTop="5dp">
<LinearLayout android:id="@+id/LinearLayout03" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<TextView android:id="@+id/TVDetailCreditCardBalance" android:text="한도액" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:textSize="18sp"></TextView>
		<TextView android:id="@+id/TVDetailCreditCardBalanceAmount" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1"></TextView>
	</LinearLayout>
	<ProgressBar style="?android:attr/progressBarStyleHorizontal" android:id="@+id/ProgressBar01" android:layout_height="wrap_content" android:layout_width="fill_parent"></ProgressBar>
	</LinearLayout>
	
	
		        



</LinearLayout>
