<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/inputAssetsExpense" android:orientation="vertical"
	android:layout_height="fill_parent" android:layout_width="fill_parent">

	<FrameLayout android:id="@+id/FrameLayout01"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical" android:gravity="center_vertical">
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:id="@+id/TVExpenseDate" android:text="@string/input_expense_date_name"
					android:layout_height="wrap_content" android:textSize="18dp"
					android:gravity="center" android:layout_width="70dp">
				</TextView>
				<Button android:layout_height="wrap_content" android:id="@+id/BtnExpenseDate"
					android:textSize="18sp" android:layout_width="fill_parent">
				</Button>

			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:id="@+id/TVExpenseCategory" android:text="@string/input_expense_category_name"
					android:layout_height="wrap_content" android:gravity="center"
					android:textSize="18sp" android:layout_width="70dp">
				</TextView>
				<Button android:id="@+id/BtnExpenseCategory"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
				</Button>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:id="@+id/TVExpenseAmount" android:text="@string/input_expense_amount_name"
					android:layout_height="wrap_content" android:gravity="center"
					android:textSize="18sp" android:layout_width="70dp">
				</TextView>
				<Button android:id="@+id/BtnExpenseAmount"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
				</Button>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:id="@+id/TVExpenseMethod" android:text="@string/input_expense_method_name"
					android:layout_height="wrap_content" android:gravity="center"
					android:textSize="18sp" android:layout_width="70dp">
				</TextView>
				<ToggleButton android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:id="@+id/TBExpenseMethodCash" android:text="@string/input_expense_method_cash"
					android:textOff="@string/input_expense_method_cash" android:textOn="@string/input_expense_method_cash"></ToggleButton>
				<ToggleButton android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:id="@+id/TBExpenseMethodCard" android:text="@string/input_expense_method_card"
					android:textOff="@string/input_expense_method_card" android:textOn="@string/input_expense_method_card"></ToggleButton>
				<ToggleButton android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:id="@+id/TBExpenseMethodAccount" android:text="@string/input_expense_method_account"
					android:textOff="@string/input_expense_method_account"
					android:textOn="@string/input_expense_method_account"></ToggleButton>
			</LinearLayout>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingLeft="80dp"
				android:id="@+id/TVPaymentMethod" android:textSize="15sp"></TextView>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:id="@+id/TVExpenseMemo" android:text="@string/input_expense_memo_name"
					android:layout_height="wrap_content" android:gravity="center"
					android:textSize="18sp" android:layout_width="70dp">
				</TextView>
				<EditText android:id="@+id/ETExpenseMemo"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
				</EditText>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:id="@+id/TVExpenseTag" android:text="@string/input_expense_tag_name"
					android:layout_height="wrap_content" android:gravity="center"
					android:textSize="18sp" android:layout_width="70dp">
				</TextView>
				<Button android:id="@+id/BtnExpenseTag"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
				</Button>
			</LinearLayout>
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/LLRepeat">
				<TextView android:id="@+id/TVExpenseRepeat" android:text="@string/input_expense_repeat_name"
					android:layout_height="wrap_content" android:gravity="center"
					android:textSize="18sp" android:layout_width="70dp">
				</TextView>
				<Button android:id="@+id/BtnExpenseRepeat"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
				</Button>
			</LinearLayout>

			<!-- 자주 사용 되는 지출 구현 -->
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_marginTop="5dp" android:visibility="gone">
				<TextView android:id="@+id/TVExpenseBookmark" android:text="자주 사용 되는 지출"
					android:layout_height="wrap_content" android:gravity="center"
					android:textSize="15sp" android:layout_width="fill_parent">
				</TextView>
			</LinearLayout>
			<Button android:id="@+id/BtnExpenseDelete"
				android:layout_height="wrap_content" android:text="삭제"
				android:layout_width="wrap_content"></Button>
		</LinearLayout>


		<LinearLayout android:id="@+id/LLBookmarkSliding"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="bottom" android:visibility="visible">
			<SlidingDrawer android:id="@+id/SlidingDrawer"
				android:handle="@+id/slideBar" android:content="@+id/contentLayout"
				android:layout_height="276dip" android:layout_width="fill_parent">

				<LinearLayout android:layout_width="fill_parent"
					android:id="@+id/slideBar" android:orientation="vertical"
					android:background="#808080" android:layout_height="8dip" />

				<LinearLayout android:layout_width="wrap_content"
					android:id="@+id/contentLayout" android:orientation="vertical"
					android:gravity="center|top" android:background="#C0C0C0"
					android:layout_height="wrap_content">

					<RelativeLayout android:id="@+id/TVBookmarkBar"
						android:layout_width="fill_parent" android:layout_height="40dip"
						android:background="#fff">

						<TextView android:id="@+id/TVBookmarkTitle" android:text="즐겨찾는 항목"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:layout_centerInParent="true" android:textColor="#000"
							android:textStyle="bold" android:textSize="24dip" />

						<Button android:id="@+id/BTBookmarkAdd"
							android:layout_centerVertical="true"
							android:layout_alignParentRight="true"
							android:layout_marginRight="20dip" android:layout_width="32dip"
							android:layout_height="32dip" />

						<Button android:id="@+id/BTBookmarkIncome"
							android:layout_centerVertical="true"
							android:layout_alignParentLeft="true" android:layout_marginLeft="20dip"
							android:layout_width="24dip" android:layout_height="18dip" />
						<Button android:id="@+id/BTBookmarkExpense"
							android:layout_centerVertical="true" android:layout_toRightOf="@+id/BTBookmarkIncome"
							android:layout_width="24dip" android:layout_height="18dip" />

					</RelativeLayout>

					<ListView android:id="@+id/LLBookmark"
						android:layout_width="fill_parent" android:layout_height="fill_parent"
						android:layout_margin="10dip" android:cacheColorHint="#0000" />
					<!-- 북마크를 표시하는 부분 <ScrollView android:id="@+id/ScrollView02" android:layout_height="fill_parent" 
						android:layout_width="fill_parent"> <LinearLayout android:id="@+id/LLBookmark" 
						android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="5dp" 
						android:orientation="vertical"> </LinearLayout> </ScrollView> -->
				</LinearLayout>
			</SlidingDrawer>
		</LinearLayout>

		<!-- 드래그 할때 사용할 부분 -->
		<RelativeLayout android:id="@+id/BookMarkDragPanel"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<RelativeLayout android:id="@+id/BookMarkDragItem"
				android:layout_width="320dip" android:layout_height="50dip"
				android:padding="1dip" android:background="#dfff"
				android:visibility="gone">

				<ImageView android:id="@+id/BookMarkItemIcon"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true" android:layout_width="48dip"
					android:layout_height="48dip" android:src="@drawable/icon" />

				<TextView android:id="@+id/BookMarkItemTitle"
					android:layout_toRightOf="@+id/BookMarkItemIcon"
					android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/BookMarkItemCategory"
					android:layout_width="wrap_content" android:layout_height="24dip"
					android:gravity="bottom" android:textColor="#000" android:textSize="16dip"
					android:textStyle="bold" android:text="Title" android:singleLine="true" />
				<TextView android:id="@+id/BookMarkItemCategory"
					android:layout_alignParentRight="true"
					android:layout_alignParentTop="true" android:layout_width="wrap_content"
					android:layout_height="24dip" android:gravity="bottom|right"
					android:textColor="#000" android:textSize="10dip"
					android:textStyle="bold" android:text="Category"
					android:singleLine="true" android:minWidth="100dip" />
				<TextView android:id="@+id/BookMarkItemMethod"
					android:layout_toRightOf="@+id/BookMarkItemIcon"
					android:layout_below="@+id/BookMarkItemTitle" android:layout_width="wrap_content"
					android:layout_height="24dip" android:gravity="bottom"
					android:textColor="#000" android:textSize="12dip" android:text="Method"
					android:singleLine="true" />
				<TextView android:id="@+id/BookMarkItemAmount"
					android:layout_alignParentRight="true" android:layout_below="@+id/BookMarkItemCategory"
					android:layout_width="wrap_content" android:layout_height="24dip"
					android:gravity="bottom|right" android:textColor="#000"
					android:textSize="12dip" android:text="Amount" android:singleLine="true"
					android:minWidth="100dip" />
			</RelativeLayout>
		</RelativeLayout>

	</FrameLayout>


</LinearLayout>
