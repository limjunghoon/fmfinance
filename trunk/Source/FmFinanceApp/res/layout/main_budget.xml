<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent">

	<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center">
  		<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/BtnPreviusMonth" android:text="이전달" android:visibility="gone">
  		</Button>
  		<TextView android:layout_height="wrap_content" android:text="년도" android:id="@+id/TVCurrentMonth" android:singleLine="true" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20dp" android:layout_width="fill_parent" android:gravity="center">
  		</TextView>
  		<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/BtnNextMonth" android:text="다음달" android:visibility="gone">
  		</Button>
	</LinearLayout>
<ListView android:layout_height="wrap_content" android:id="@+id/LVBudget" android:layout_width="fill_parent"></ListView>
</LinearLayout>
