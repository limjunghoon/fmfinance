<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

	<LinearLayout android:id="@+id/LinearLayout02" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:orientation="vertical">
		<TextView android:layout_width="fill_parent" android:id="@+id/TVAssetsSavingsBankingName" android:singleLine="true" android:ellipsize="marquee" android:layout_height="wrap_content" android:text="은행" android:textSize="15sp"/>
		<TextView android:layout_width="fill_parent" android:id="@+id/TVAssetsSavingsTitle" android:singleLine="true" android:ellipsize="marquee" android:layout_height="wrap_content" android:text="제목" android:textSize="15sp"/>
		<TextView android:layout_width="fill_parent" android:id="@+id/TVAssetsSavingsAmount" android:singleLine="true" android:ellipsize="marquee" android:layout_height="wrap_content" android:text="금액" android:textSize="15sp"/>
		<TextView android:layout_width="fill_parent" android:id="@+id/TVAssetsSavingsPayment" android:singleLine="true" android:ellipsize="marquee" android:layout_height="wrap_content" android:text="납입금" android:textSize="15sp"/>
		<TextView android:layout_width="fill_parent" android:id="@+id/TVAssetsSavingsCreateDate" android:singleLine="true" android:ellipsize="marquee" android:layout_height="wrap_content" android:text="개설날짜" android:textSize="15sp"/>
		<TextView android:layout_width="fill_parent" android:id="@+id/TVAssetsSavingsExpiryDate" android:singleLine="true" android:ellipsize="marquee" android:layout_height="wrap_content" android:text="만료날짜" android:textSize="15sp"/>
		<TextView android:layout_width="fill_parent" android:id="@+id/TVAssetsSavingsRate" android:singleLine="true" android:ellipsize="marquee" android:layout_height="wrap_content" android:text="이율" android:textSize="15sp"/>
		<TextView android:layout_width="fill_parent" android:id="@+id/TVAssetsSavingsMemo" android:singleLine="true" android:ellipsize="marquee" android:layout_height="wrap_content" android:text="메모" android:textSize="15sp"/>
		
	</LinearLayout>	        
	<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:orientation="vertical" android:layout_weight="5" android:layout_height="wrap_content" android:layout_gravity="center_vertical">
		<Button android:layout_height="wrap_content" android:text="삭제" android:id="@+id/BtnReportAssetsDelete" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:focusable="false"></Button>
	</LinearLayout>

</LinearLayout>
