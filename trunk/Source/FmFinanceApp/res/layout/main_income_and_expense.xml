<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<FrameLayout android:id="@+id/FrameLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/LinearLayout05" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
	<LinearLayout android:id="@+id/LinearLayout05" android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center">
		<ToggleButton android:layout_width="wrap_content" android:id="@+id/TBViewMode" android:layout_height="wrap_content" android:textOff="일별" android:textOn="월별" android:layout_weight="0"></ToggleButton>
		<Button android:layout_width="wrap_content" android:id="@+id/BtnPreviousDay" android:layout_height="wrap_content" android:text="이전" android:visibility="gone" android:layout_weight="0"></Button>
		<Button android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:id="@+id/BtnCurrentday" android:layout_marginRight="5dp" android:textSize="24sp" android:gravity="center" android:layout_width="fill_parent" android:layout_weight="1"></Button>
		<Button android:layout_width="wrap_content" android:id="@+id/BtnNextDay" android:layout_height="wrap_content" android:text="다음" android:visibility="gone" android:layout_weight="0"></Button>
		<ImageButton android:layout_width="wrap_content" android:id="@+id/BtnInput" android:text="입력" android:layout_height="wrap_content" android:layout_weight="0" android:src="@drawable/category_001"></ImageButton>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:id="@+id/TotalLayout" android:gravity="bottom" android:layout_height="wrap_content" android:layout_weight="0" android:orientation="horizontal" android:paddingLeft="20dp" android:paddingRight="20dp">
		<LinearLayout android:layout_width="fill_parent" android:id="@+id/LinearLayout" android:gravity="bottom" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="4">
			<ProgressBar android:layout_width="fill_parent" android:id="@+id/IncomeExpensePrograss" style="?android:attr/progressBarStyleHorizontal" android:layout_height="fill_parent" android:max="100"></ProgressBar>
			<TextView android:id="@+id/TVIncomeExpenseAmount" android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="center_horizontal"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent" android:id="@+id/LinearLayout" android:gravity="bottom" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="2" android:layout_marginLeft="15dp">
			<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/TVTotalIncome" android:textSize="20sp"></TextView>
			<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/TVTotalExpense" android:textSize="20sp"></TextView>
		</LinearLayout>
	</LinearLayout>
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/LLDailyView">
			<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="0">
				<LinearLayout android:id="@+id/LinearLayout02" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:gravity="bottom">
					<TextView android:layout_width="wrap_content" android:id="@+id/TVDailyDay" android:textSize="25sp" android:gravity="bottom" android:layout_height="fill_parent" android:text="일"></TextView>
					<TextView android:layout_width="wrap_content" android:id="@+id/TVDailyWeekly" android:gravity="bottom" android:text="(요일)" android:layout_height="fill_parent"></TextView>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="wrap_content" android:layout_weight="0">
					<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TVDailyIncome" android:text="수입"></TextView>
					<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="지출" android:id="@+id/TVDailyExpense"></TextView>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="wrap_content" android:layout_weight="0" android:layout_marginLeft="5dp">
					<TextView android:layout_height="wrap_content" android:gravity="right" android:layout_width="fill_parent" android:id="@+id/TVDailyIncomeAmount" android:text="0원"></TextView>
					<TextView android:layout_height="wrap_content" android:gravity="right" android:layout_width="fill_parent" android:id="@+id/TVDailyExpenseAmount" android:text="0원"></TextView>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent" android:orientation="vertical" android:layout_weight="1" android:layout_height="fill_parent" android:id="@+id/LLDailyIncome" android:visibility="gone">
				<TextView android:layout_height="wrap_content" android:text="수입" android:layout_width="fill_parent" android:textSize="15sp" android:id="@+id/TVDailyIncomeTilte"></TextView>
				<ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/LVDailyIncome"></ListView>
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent" android:orientation="vertical" android:layout_weight="1" android:layout_height="fill_parent" android:id="@+id/LLDailyExpense">
				<TextView android:layout_height="wrap_content" android:text="지출" android:layout_width="fill_parent" android:textSize="15sp" android:id="@+id/TVDailyExpenseTitle" android:visibility="gone"></TextView>
				<ListView android:layout_height="wrap_content" android:id="@+id/LVDailyExpense" android:layout_width="fill_parent"></ListView>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/LLMonthlyView" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
			<ListView android:id="@+id/LVMonthly" android:layout_width="fill_parent" android:layout_height="fill_parent"></ListView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:gravity="bottom" android:id="@+id/LLAlarmSliding" android:layout_height="wrap_content" android:visibility="gone">
			<SlidingDrawer android:id="@+id/SlidingDrawer" android:handle="@+id/slideHandleButton" android:content="@+id/contentLayout" android:padding="10dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
				<Button android:layout_height="wrap_content" android:id="@+id/slideHandleButton" android:layout_width="fill_parent" android:text="알림"></Button>
				<LinearLayout android:id="@+id/contentLayout" android:orientation="vertical" android:gravity="center|top" android:padding="10dip" android:layout_height="wrap_content" android:layout_width="fill_parent">
					
				<ListView android:layout_width="fill_parent" android:id="@+id/LVAlarm" android:layout_height="fill_parent"></ListView></LinearLayout>
			</SlidingDrawer>
		</LinearLayout>
	</FrameLayout>

</LinearLayout>
