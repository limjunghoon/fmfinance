				</TextView>
				
				<com.fletamuto.common.control.fmgraph.PieGraph android:id="@+id/pgraph" android:layout_height="270dp" android:layout_width="270dp"/>
				<LinearLayout android:id="@+id/LLItemButtons" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
