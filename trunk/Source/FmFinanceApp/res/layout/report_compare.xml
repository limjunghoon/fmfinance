<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   	android:scrollbarStyle="outsideOverlay">
   	
	<ScrollView android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="fill_parent">
		<LinearLayout android:layout_height="wrap_content" android:id="@+id/LLMonth" android:orientation="vertical" android:layout_width="fill_parent" android:gravity="center_horizontal">
			<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="금액" android:id="@+id/BtnTotalAmount" android:textSize="20sp">
			</Button>
			<com.fletamuto.common.control.fmgraph.PieGraph android:id="@+id/pgraph" android:layout_height="210dp" android:layout_width="210dp"/>
			<LinearLayout android:id="@+id/LLItemButtons" android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>