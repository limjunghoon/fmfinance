<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent" android:gravity="bottom">
		
	
	<LinearLayout android:layout_height="wrap_content" android:id="@+id/LLAmount" android:layout_width="fill_parent" android:orientation="vertical" android:background="#EEEEEE" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
		<LinearLayout android:layout_height="wrap_content" android:id="@+id/LLAmountTitle" android:layout_width="fill_parent" android:background="#C0C0C0">
			<TextView android:singleLine="true" android:id="@+id/TVAmountTitle" android:layout_width="fill_parent" android:textColor="#101010" android:layout_weight="1" android:layout_height="fill_parent" android:gravity="center" android:textSize="22sp" android:layout_marginLeft="60dp"></TextView>
			<ImageButton android:id="@+id/BtnAmountOK" android:layout_height="wrap_content" android:text="완료" android:layout_width="wrap_content" android:background="@drawable/ok" android:layout_marginRight="5dp"></ImageButton>
		</LinearLayout>
	<TextView android:id="@+id/TVAmount" android:layout_height="wrap_content" android:text="" android:layout_width="fill_parent" android:gravity="right" android:paddingRight="10dp" android:textSize="30dp" android:background="#ffffff">
	</TextView>
	<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="right" android:id="@+id/TVAmountChar" android:paddingRight="10dp" android:textSize="15dp"></TextView><LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent">
		<Button android:id="@+id/BtnAmount_1" android:layout_height="wrap_content" android:text="1" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
		<Button android:id="@+id/BtnAmount_2" android:layout_height="wrap_content" android:text="2" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
		<Button android:id="@+id/BtnAmount_3" android:layout_height="wrap_content" android:text="3" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
	</LinearLayout><LinearLayout android:id="@+id/LinearLayout02" android:layout_height="wrap_content" android:layout_width="fill_parent">
		<Button android:id="@+id/BtnAmount_4" android:layout_height="wrap_content" android:text="4" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
		<Button android:id="@+id/BtnAmount_5" android:layout_height="wrap_content" android:text="5" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
		<Button android:id="@+id/BtnAmount_6" android:layout_height="wrap_content" android:text="6" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
	</LinearLayout><LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="fill_parent">
		<Button android:id="@+id/BtnAmount_7" android:layout_height="wrap_content" android:text="7" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
		<Button android:id="@+id/BtnAmount_8" android:layout_height="wrap_content" android:text="8" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
		<Button android:id="@+id/BtnAmount_9" android:layout_height="wrap_content" android:text="9" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout04" android:layout_height="wrap_content" android:layout_width="fill_parent">
		<Button android:layout_height="wrap_content" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/BtnAmount_00" android:text="00" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
		<Button android:id="@+id/BtnAmount_0" android:layout_height="wrap_content" android:text="0" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
		<Button android:id="@+id/BtnAmountRemove" android:layout_height="wrap_content" android:text="@string/input_amount_remove" android:minWidth="80dp" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp">
		</Button>
	

</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout05" android:layout_height="wrap_content" android:layout_width="fill_parent" android:visibility="gone">
		<Button android:id="@+id/BtnAmountOK" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:text="완료" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp"></Button>
		<Button android:id="@+id/BtnAmountCancel" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:text="취소" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:textSize="20sp"></Button>
	</LinearLayout>
	

</LinearLayout>
	
	





	
	
	
	


</LinearLayout>

